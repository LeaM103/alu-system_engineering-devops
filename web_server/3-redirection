#!/usr/bin/env bash
# Installs nginx server

# Update package lists non-interactively
sudo apt-get update

# Install Nginx web srver non-interactively
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'

echo "Holberton School for the win!" | sudo tee /var/www/html/index.html > /dev/null

# Insert redirect block after server_name
sudo sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx service without using 'systemctl'
sudo service nginx start
